@model Tuple<List<Lost_and_Found.Models.Lostitem>, List<Lost_and_Found.Models.Founditem>>

@{
    ViewData["Title"] = "Post";
    Layout = "~/Views/Shared/_Layout.cshtml"; // If you have a layout
}


<h3>Lost Items</h3>
@if (Model.Item1.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Item Category</th>
                <th>Description</th>
                <th>Lost Area</th>
                <th>Lost Date</th>
                <th>Item Image</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Item1)
            {
                <tr>
                    <td>@item.ItemName</td>
                    <td>@item.ItemCategory</td>
                    <td>@item.Description</td>
                    <td>@item.LostArea</td>
                    <td>@item.Date</td>
                    <td>

                        <img src="@Url.Content("~/img/" + @item.Image)" alt="Lost Item Image" width="200" />

                    </td>
                    <td>
                        | <a asp-action="Lost_Details" asp-route-id="@item.ItemId">Details</a> |
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No post found!.</p>
}

